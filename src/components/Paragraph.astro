---
interface Props {
  title: string;
  divider: boolean;
}

const { title, divider } = Astro.props;
---

<div>
  <h1 class="display-6 mt-3 fw-bold text-warning">{title}</h1>
  <div class="col-lg-12 mx-auto">
    <slot />
  </div>
  {divider && <div class="b-example-divider" />}
</div>

<style>
  .b-example-divider {
    height: 3rem;
    background-color: rgba(0, 0, 0, 0.1);
    border: solid rgba(0, 0, 0, 0.15);
    border-width: 1px 0;
    box-shadow:
      inset 0 0.5em 1.5em rgba(0, 0, 0, 0.1),
      inset 0 0.125em 0.5em rgba(0, 0, 0, 0.15);
  }
</style>
